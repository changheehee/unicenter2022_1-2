package Hehehe;
import java.util.Scanner;

public class Hehehehe{
	public static void main(String[]args){
		Scanner sc = new Scanner(System.in);
		int count = 0;
		
		while (true) {
			int value = sc.nextInt();
			if (value == 0) break;
			if (value % 3 != 0 && value % 5 != 0) count++;
		}
		System.out.println(count);
	}
}

