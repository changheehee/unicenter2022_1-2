package Hehehe;
import java.util.Scanner;

public class Hehehehe{
	public static void main(String[]args){
		Scanner sc = new Scanner(System.in);
		int value = sc.nextInt(), sum = 0, i = 0;
		
		if (value <= 100) {
			while (true) {
				sum += ++i;
				if (i == value) break;
			}
			System.out.print(sum);
		}
	}
}

