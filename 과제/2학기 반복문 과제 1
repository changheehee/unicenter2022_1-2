package Hehehe;
import java.util.Scanner;

public class Hehehehe{
	public static void main(String[]args){
		Scanner sc = new Scanner(System.in);
		int value = sc.nextInt();
		
		for (int i = 1; i <= 10; i++) {
			System.out.print(value*i+" ");
		}
	}
}

