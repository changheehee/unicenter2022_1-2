package Hehehe;
import java.util.Scanner;

public class Hehehehe{
	public static void main(String[]args){
		Scanner sc = new Scanner(System.in);
		
		while (true) {
			System.out.print("Base = ");
			float base = sc.nextInt(); 
			System.out.print("Height = ");
			float height = sc.nextInt();
			float width = (base*height)/2;
			System.out.printf("Triangle width = %.1f\n", width);
			System.out.print("Continue? ");
			String answer = sc.next();
			if (answer.equals("N")) break;
			else if (answer.equals("Y")) continue;
			else System.out.println("Invalid input. Repeat the program again.");
		}
	}
}

___________________________

package Hehehe;
import java.util.Scanner;

public class Hehehehe{
	public static void main(String[]args){
		Scanner sc = new Scanner(System.in);
		
		for (int i = 0; i < 5; i++) {
			for (int j = 2+i; j < 7+i; j++) {
				System.out.print(j+" ");
			}
			System.out.println();
		}
	}
}

